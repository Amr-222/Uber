@{
    ViewData["Title"] = "Drivers";
}

<style>
    header {
        background: #000;
        color: #fff;
        padding: 20px 50px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-left {
        display: flex;
        align-items: center;
        gap: 30px;
    }

        .nav-left h1 {
            margin: 0;
            font-size: 24px;
        }

        .nav-left a {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
        }

    .nav-right a {
        margin-left: 20px;
        color: #fff;
        text-decoration: none;
        font-weight: 500;
    }

    .nav-right .signup-btn {
        background: #fff;
        color: #000;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: bold;
    }

    .page-title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #000;
        margin-top: 40px;
    }
</style>

<header>
    <div class="nav-left">
        <h1>Uber</h1>
        <a href="#">Ride</a>
        <a href="#">Drive</a>
    </div>
    <div class="nav-right">
        <a asp-controller="Account" asp-action="ChooseLoginType">Log in</a>
        <a asp-controller="Account" asp-action="ChooseRegisterType" class="signup-btn">Sign up</a>
    </div>
</header>

<div class="page-title">Drivers</div>

