    }

    .sidebar {
        width: 220px;
        background: linear-gradient(180deg, #000, #222);
        color: #fff;
        padding: 20px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: fixed;
        height: 100%;
        box-shadow: 2px 0 10px rgba(0,0,0,0.2);
    }

    .user-info {
        text-align: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        margin-bottom: 15px;
    }

    .icon-placeholder {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .user-icon {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    .user-info h3 {
        font-size: 16px;
        margin: 0;
        color: #fff;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
        width: 100%;
    }

        .sidebar ul li {
            padding: 12px 20px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .sidebar ul li:not(.logout):hover,
            .sidebar ul li:not(.logout).active {
                background: #1CB5A3;
            }

            .sidebar ul li.logout {
                color: #fff;
            }

                .sidebar ul li.logout:hover {
                    background: #e74c3c;
                }

    .sidebar-btn {
        background: none;
        border: none;
        color: #fff;
        font-size: 14px;
        padding: 0;
        cursor: pointer;
        width: 100%;
        text-align: left;
    }

    .sidebar ul li:not(.logout) .sidebar-btn:hover {
        color: #1CB5A3;
    }

    .sidebar ul li.logout .sidebar-btn:hover {
        color: #fff;
    }

    .content {
        flex: 1;
        margin-left: 220px;
        padding: 20px;
    }

    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }

    .ride-card {
        background: #fff;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .empty-msg {
        color: #777;
        font-style: italic;
    }

    .btn-update {
        display: inline-block;
        padding: 10px 15px;
        background: #1CB5A3;
        color: #fff;
        text-decoration: none;
        border-radius: 6px;
        transition: background 0.3s ease;
    }

        .btn-update:hover {
            background: #17a38a;
        }

    .wallet-page {
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 60px);
        background: none;
    }

        .wallet-page.active {
            display: flex;
        }

    .wallet-title {
        font-size: 40px;
        font-weight: bold;
        margin-bottom: 30px;
        color: #333;
    }

    .wallet-card.big {
        background: linear-gradient(135deg, #1CB5A3, #0e8b77);
        color: #fff;
        border-radius: 20px;
        padding: 50px;
        width: 500px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(0,0,0,0.2);
    }

    .wallet-balance-label {
        font-size: 18px;
        color: rgba(255,255,255,0.8);
    }

    .wallet-balance {
        font-size: 50px;
        font-weight: bold;
        margin: 20px 0 30px;
    }

    .wallet-actions {
        display: flex;
        justify-content: space-between;
    }

    .wallet-btn {
        flex: 1;
        padding: 15px;
        margin: 0 8px;
        border: none;
        border-radius: 12px;
        font-size: 18px;
        cursor: pointer;
        transition: background 0.3s ease;
        background: rgba(255,255,255,0.15);
        color: #fff;
    }

        .wallet-btn:hover {
            background: rgba(255,255,255,0.3);
        }

    .help-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 30px;
        background: #f9f9f9;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .help-header h1 {
        color: #1CB5A3;
        font-size: 36px;
        margin-bottom: 10px;
        text-align: center;
    }

    .help-header p {
        font-size: 16px;
        text-align: center;
        color: #555;
        margin-bottom: 30px;
    }

    .help-section {
        margin-bottom: 25px;
    }

        .help-section h2 {
            color: #1CB5A3;
            font-size: 22px;
            margin-bottom: 10px;
        }

        .help-section p,
        .help-section ul {
            font-size: 16px;
            color: #333;
            line-height: 1.6;
        }

            .help-section ul li {
                margin-bottom: 8px;
            }

    .contact-section .btn-contact {
        display: inline-block;
        padding: 10px 20px;
        background: #1CB5A3;
        color: #fff;
        text-decoration: none;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

        .contact-section .btn-contact:hover {
            background: #17a38a;
        }
</style>