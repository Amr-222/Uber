@model Uber.BLL.ModelVM.User.UserProfileVM
@{
    ViewData["Title"] = "User Profile";
}

@if (TempData["PaymentMessage"] != null)
{
    <script>
        alert('@TempData["PaymentMessage"]');
    </script>
}

<div class="profile-container">
    <aside class="sidebar">
        <div class="user-info">
            <div class="icon-placeholder">
                <img src="~/Files/UserIcon.jpg" alt="User Icon" class="user-icon" />
            </div>
            <h3>@Model.Name</h3>
        </div>

        <ul>
            <li data-tab="rides" class="active">🚗 Rides</li>
            <li data-tab="payment">💳 Wallet</li>
            <li data-tab="help">❓ Help</li>
            <li data-tab="settings">⚙ Settings</li>
            <li class="logout">
                <form asp-controller="Account" asp-action="Logout" method="post" style="margin:0;">
                    <button type="submit" class="sidebar-btn">🚪 Logout</button>
                </form>
            </li>
        </ul>
    </aside>

    <main class="content">
        <section id="rides" class="tab-content active">
            <h2>Your Rides</h2>
            @if (Model.Rides != null && Model.Rides.Any())
            {
                foreach (var ride in Model.Rides)
                {
                    <div class="ride-card">
                        <p><strong>From:</strong> @ride.StartLat @ride.StartLng</p>
                        <p><strong>To:</strong> @ride.EndLat @ride.EndLng</p>
                    </div>
                }
            }
            else
            {
                <p class="empty-msg">No rides yet.</p>
            }
        </section>

        <section id="payment" class="tab-content wallet-page">
            <h1 class="wallet-title">💳 Wallet</h1>
            <div class="wallet-card big">
                <div class="wallet-header">
                    <span class="wallet-balance-label">Cash balance</span>
                </div>
                <div class="wallet-balance">
                    $@Model.Balance
                </div>
                <div class="wallet-actions">
                    <a asp-controller="Payment" asp-action="Index" class="wallet-btn add">Add Cash</a>
                    <button class="wallet-btn cashout">Cash Out</button>
                </div>
            </div>
        </section>

        <section id="help" class="tab-content">
            <div class="help-container">
                <header class="help-header">
                    <h1>🚖 Help & Support</h1>
                    <p>Quick tips to help you get started and use our app effectively.</p>
                </header>

                <section class="help-section">
                    <h2>Getting Started</h2>
                    <p>Sign up or log in, then request a ride by entering your pickup and drop-off locations.</p>
                </section>

                <section class="help-section">
                    <h2>Booking a Ride</h2>
                    <p>
                        1. Go to the home page.<br>
                        2. Enter pickup & drop-off points.<br>
                        3. Choose your ride type.<br>
                        4. Confirm booking.
                    </p>
                </section>

                <section class="help-section">
                    <h2>Payment Methods</h2>
                    <p>We support Cash and Card payments. Set your preference in the "Wallet" tab.</p>
                </section>

                <section class="help-section">
                    <h2>Safety Tips</h2>
                    <ul>
                        <li>Verify the driver's details before starting.</li>
                        <li>Share your trip with friends or family.</li>
                        <li>Contact support if you face any issues.</li>
                    </ul>
                </section>

                <section class="help-section contact-section">
                    <h2>Need More Help?</h2>
                    <p>Contact our support team anytime.</p>
                    <a href="mailto:support@uberclone.com" class="btn-contact">Contact Support</a>
                </section>
            </div>
        </section>

        <!-- Settings Tab -->
        <section id="settings" class="tab-content">
            <h2>Settings</h2>
            <a href="#" class="btn-update">Update Profile</a>
        </section>
    </main>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<script>
    document.querySelectorAll(".sidebar ul li[data-tab]").forEach(item => {
        item.addEventListener("click", () => {
            document.querySelectorAll(".sidebar ul li").forEach(li => li.classList.remove("active"));
            document.querySelectorAll(".tab-content").forEach(tab => tab.classList.remove("active"));

            item.classList.add("active");
            document.getElementById(item.dataset.tab).classList.add("active");
        });
    });
</script>

<style>
